@{
  TempData.Keep();
  string? currentPage = Convert.ToString(ViewContext.RouteData.Values["Page"])!;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-page="/Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("../_Partials/_Macros")
      </span>
      <span class="app-brand-text demo menu-text fw-bold">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="ti menu-toggle-icon d-none d-xl-block ti-sm align-middle"></i>
      <i class="ti ti-x d-block d-xl-none ti-sm align-middle"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Starter Kit menu-items *@
  <ul class="menu-inner py-1">
    <li class=' menu-item@(currentPage=="/Index" ? " active" : "" )'>
      <a asp-page="/Index" class="menu-link">
        <i class="menu-icon tf-icons ti ti-smart-home"></i>
        <div data-i18n="Home">Home</div>
      </a>
    </li>
    <li class='menu-item@(currentPage.StartsWith("/Analyze/") ? " active open" : "")'>
      <a href="javascript:void(0)" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons ti ti-color-swatch"></i>
        <div data-i18n="Analyze">Analyze</div>
      </a>
      <ul class="menu-sub">
        <li class='menu-item@(currentPage == "/Ui/Accordion" ? " active" : "")'>
          <a asp-page="/Ui/Accordion" class="menu-link">
            <div data-i18n="AiNews">AiNews</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Ui/Alerts" ? " active" : "")'>
          <a asp-page="/Ui/Alerts" class="menu-link">
            <div data-i18n="LezzetRotasi">LezzetRotasi</div>
          </a>
        </li>
            
      </ul>
    </li>
    <li class=' menu-item@(currentPage=="/Users" ? " active" : "" )'>
      <a asp-page="/Users" class="menu-link">
        <i class="menu-icon tf-icons ti ti-smart-home"></i>
        <div data-i18n="Users">Users</div>
      </a>
    </li>
    
           <li class=' menu-item@(currentPage=="/Automations" ? " active" : "" )'>
              <a asp-page="/Automations" class="menu-link">
                <i class="menu-icon tf-icons ti ti-settings-automation"></i>
                <div data-i18n="Automations">Automations</div>
              </a>
            </li>
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">AI News</span>
    </li>
    <li class='menu-item@(currentPage == "/AiNews/Articles" ? " active" : "")'>
      <a asp-page="/AiNews/Articles" class="menu-link">
        <i class="menu-icon tf-icons ti ti-app-window"></i>
        <div data-i18n="Articles">Articles</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/AiNews/Editor" ? " active" : "")'>
              <a asp-page="/AiNews/Editor" class="menu-link">
                <i class="menu-icon tf-icons ti ti-app-window"></i>
                <div data-i18n="Editor">Editor</div>
              </a>
            </li>
  </ul>

</aside>
<!-- / Menu -->
